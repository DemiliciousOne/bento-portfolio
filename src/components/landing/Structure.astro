---
import SimplePortfolioItem from '@components/SimplePortfolioItem';
import Card from '@components/Card';
import CardContainer from '@components/CardContainer';
import AboutCard from '@components/AboutWebsiteCard.astro';
import { portfolioData } from '@utils/portfolioData';
import TechStackCard from '@components/TechStackCard.astro';
import SocialIcon from '@components/ui/SocialIcon.astro';
import worldMap from '@assets/icons/world.svg';
import WorldMapCard from '@components/WorldMapCard';
import AboutWebsiteCard from '@components/AboutWebsiteCard.astro';
---
<section>
    <CardContainer client:load>
      <Card client:load className="order-1 lg:order-none lg:row-span-2 ring-primary/5 bg-white dark:bg-secondary shadow-xl dark:shadow-thick rounded-3xl p-8">      
        <p
            class="text-xl font-normal tracking-tight text-primary dark:text-white lg:text-2xl"
          >
            About me
          </p>
          <div class="space-y-6 text-sm text-zinc-500 dark:text-zinc-400 font-light lg:text-lg mt-4">
            <p>
              👋 Hi, I'm Demi.
            </p>
          
            <p>
              I'm a software engineer and product designer living in Berlin. I enjoy building beautiful and impactful websites for businesses.
            </p>
          
            <p>
              🌍 Remote work is here to stay! I'm on a mission to help people find remote jobs with <a href="https://careervault.io" target="_blank" rel="noopener noreferrer" class="underline">Career Vault — A modern remote job board</a> and help companies realize the potential of hiring talent from around the world.
            </p>
          
            <div>
              <p>Things I do in my free time:</p>
              <ul class="list-none pl-2">
                <li>🏀 Basketball</li>
                <li>🏋️‍♀️ Bodybuilding</li>
                <li>🎱 Billiards</li>
                <li>🎤 Singing</li>
              </ul>
            </div>
          
            <p>
              P.S. Follow me on <a href="https://www.linkedin.com/in/demiyang12/" target="_blank" rel="noopener noreferrer" class="underline">LinkedIn</a> for content about recruiting and remote work.
            </p>
          </div>
      </Card>
    <Card client:load
    className="order-3 lg:order-none ring-1 dark:ring-white/10  ring-primary/5 flex flex-col justify-between items-center rounded-3xl shadow-xl dark:shadow-thick p-8  bg-white dark:bg-secondary overflow-hidden lg:text-left"
  >
    <div>
      <p
        class="text-xl text-primary dark:text-white md:text-2xl tracking-tight"
      >
        My resume
      </p>
      <p class="mt-4 text-sm font-light lg:text-lg text-zinc-500 dark:text-zinc-400 md:max-w-xs lg:max-w-none">
        See more details about the projects I've worked on and my work experience. 
      </p>
    </div>
    <div class="w-full mt-8 md:max-w-xs lg:max-w-none">
      <a href="https://drive.google.com/file/d/1bYwKZs7n1-rPAg0gtTM4yz3my29XfrFj/view?usp=drive_link"
      target="_blank"
      rel="noopener noreferrer"
      class="inline-block text-sm py-2 w-full px-4 h-12 font-semibold focus:ring-2 rounded-lg bg-primary dark:bg-white dark:text-primary dark:hover:text-white hover:text-primary dark:hover:bg-white/5 hover:bg-primary/10 text-white flex duration-200 focus:ring-offset-2 focus:ring-inline-flex items-center justify-between"
    >
      Read my resume
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="icon icon-tabler icon-tabler-external-link w-4 h-4"
        viewBox="0 0 24 24"
        stroke-width="2"
        stroke="currentColor"
        fill="none"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
        <path d="M12 6h-6a2 2 0 0 0 -2 2v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-6" />
        <path d="M11 13l9 -9" />
        <path d="M15 4h5v5" />
      </svg>
    </a>
    </div>
  </Card>
      <Card client:load
        className="order-4 lg:order-none lg:row-span-1 flex flex-col justify-between group hover:ring-primary/10 duration-300 h-full ring-primary/5 lg:row-start-2 md:grid-cols-2 md:grid lg:gap-0 md:items-center md:gap-12 lg:grid-cols-none lg:col-start-2 lg:col-span-2 rounded-3xl p-8 bg-white dark:bg-secondary shadow-xl dark:shadow-thick"
      >
      <WorldMapCard client:load />

      </Card>
      
      <Card
      client:load className="order-5 lg:order-none ring-primary/5 rounded-3xl justify-between shadow-xl dark:shadow-thick flex flex-col p-8 h-full bg-white  dark:bg-secondary"
      >
        <div class="w-full h-full flex flex-col">
          <p
            class="text-xl font-normal tracking-tight text-primary dark:text-white lg:text-2xl"
          >
            Blog
          </p>
          <p
          class="mt-4 text-sm text-zinc-500 dark:text-zinc-400 font-light lg:text-lg"
        >
          Coming soon.
        </p>
        </div>
        
      </Card>
        {portfolioData.map(item => (
          <SimplePortfolioItem client:load item={item} />
        ))}
        <Card client:load
        className="order-last lg:order-none lg:row-span-1 flex flex-col justify-between group hover:ring-primary/10 duration-300 h-full ring-primary/5 lg:row-start-3 md:grid-cols-2 md:grid lg:gap-0 md:items-center md:gap-12 lg:grid-cols-none lg:col-start-3 lg:col-span-2 rounded-3xl p-8 bg-white dark:bg-secondary shadow-xl dark:shadow-thick"
      >
      <AboutWebsiteCard />

      </Card>
      
      <Card
      client:load
        className="order-2 lg:order-none lg:row-span-2 ring-1 dark:ring-white/10 ring-primary/5 hover:ring-primary/5 bg-white dark:bg-secondary  dark:hover:ring-white/20 overflow-hidden duration-300 shadow-xl dark:shadow-thick rounded-3xl p-8"
      >
        <TechStackCard />
      </Card>
    </CardContainer>
</section>